# 6-Jar Financial App - MLOps Environment Configuration
# Customize these values for your environment

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# SageMaker Configuration
SAGEMAKER_EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/SageMakerExecutionRole
SAGEMAKER_CLASSIFICATION_ENDPOINT=transaction-classifier-endpoint
SAGEMAKER_PREDICTION_ENDPOINT=spending-prediction-endpoint

# Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Database Configuration
DATABASE_URL=postgresql://mlops:mlops123@localhost:5432/mlops_db
DATABASE_URL_TEST=postgresql://mlops:mlops123@localhost:5432/mlops_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_URL_TEST=redis://localhost:6379/1

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=financial_knowledge

# API Configuration
API_SECRET_KEY=your-super-secret-key-change-this-in-production
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# LocalStack Configuration (for local development)
LOCALSTACK_ENDPOINT=http://localhost:4566
USE_LOCALSTACK=true

# S3 Configuration
S3_BUCKET_NAME=your-unique-bucket-name-mlops-financial
S3_MODEL_ARTIFACTS_PREFIX=models/
S3_DATA_PREFIX=data/

# Development Configuration
DEBUG=false
TESTING=false
ENVIRONMENT=development
